0 0 1 * * root /usr/bin/letsencrypt --agree-tos --renew-by-default --email contact@myplaceonline.com --standalone --standalone-supported-challenges http-01 --http-01-port 9999 certonly -d myplaceonline.com -d www.myplaceonline.com  && cat /etc/letsencrypt/live/myplaceonline.com/{fullchain.pem,privkey.pem} > /etc/haproxy/ssl/myplaceonline.com.pem
